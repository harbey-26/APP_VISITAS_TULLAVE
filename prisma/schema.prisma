generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("AGENT") // AGENT, ADMIN
  createdAt DateTime @default(now())
  visits    Visit[]
}

model Property {
  id        Int      @id @default(autoincrement())
  address   String
  client    String
  lat       Float?
  lng       Float?
  createdAt DateTime @default(now())
  visits    Visit[]
}

model Visit {
  id               Int       @id @default(autoincrement())
  userId           Int
  propertyId       Int
  scheduledStart   DateTime
  estimatedDuration Int      // In minutes
  status           String    @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, MISSED
  type             String    // SHOWING, APPRAISAL, INSPECTION
  actualStart      DateTime?
  actualEnd        DateTime?
  checkInLat       Float?
  checkInLng       Float?
  checkOutLat      Float?
  checkOutLng      Float?
  checkOutLng      Float?
  notes            String?
  clientName       String?
  clientPhone      String?
  
  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
  images   VisitImage[]
}

model VisitImage {
  id      Int    @id @default(autoincrement())
  visitId Int
  url     String
  
  visit Visit @relation(fields: [visitId], references: [id])
}
